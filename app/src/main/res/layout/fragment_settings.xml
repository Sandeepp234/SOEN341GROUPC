<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/signUpB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="signUpMethod"
        android:text="Sign Up"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp" />

    <Button
        android:id="@+id/logInB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="logInMethod"
        android:text="Log in"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp" />

    <Button
        android:id="@+id/logOutB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="logOutMethod"
        android:text="Log out"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <Button
        android:id="@+id/aboutB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick ="aboutMethod"
        android:text="About"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/notificationsB"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/notificationsB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="notificationsMethod"
        android:text="Notifications"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/logOutB"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>